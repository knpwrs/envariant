{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "envariant",
  "version": "0.0.0",
  "description": "An Invariant for Environment Variables",
  "main": "dist/commonjs/index.js",
  "module": "dist/esnext/index.js",
  "types": "dist/esnext/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:cjs": "tsc --module commonjs --outDir dist/commonjs",
    "build:esm": "tsc --module esnext --outDir dist/esnext",
    "clean": "rimraf dist",
    "check": "run-s check:*",
    "check:eslint": "eslint src",
    "check:prettier": "prettier --check src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepack": "run-s clean build",
    "np": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knpwrs/typescript-module.git"
  },
  "bugs": {
    "url": "https://github.com/knpwrs/typescript-module/issues"
  },
  "homepage": "https://github.com/knpwrs/typescript-module#readme",
  "keywords": [
    "typescript",
    "module"
  ],
  "author": "Ken Powers <ken@kenpowers.net> (https://knpw.rs)",
  "license": "Unlicense",
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.0",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1"
  }
}
